/dts-v1/;

#include <microchip/mec1501hsz.dtsi>

/ {
	model = "Intel MEC1501_ADL development board";
	compatible = "microchip, mec1501_adl",
		     "microchip,mec1501hsz";

	chosen {
		zephyr,sram = &sram0;
		zephyr,console = &uart2;
		zephyr,flash = &flash0;
	};

	aliases {
		pwm-0 = &pwm0;
		peci-0 = &peci0;

		i2c0 = &i2c_smb_0;
	};

	power-states {
		idle: idle {
			compatible = "zephyr,power-state";
			power-state-name = "suspend-to-idle";
			min-residency-us = <1000000>;
		};

		suspend_to_ram: suspend_to_ram {
			compatible = "zephyr,power-state";
			power-state-name = "suspend-to-ram";
			min-residency-us = <2000000>;
		};
	};
};

&cpu0 {
	cpu-power-states = <&idle &suspend_to_ram>;
};

&uart2 {
	status = "okay";
	current-speed = <115200>;
};

&adc0 {
	status = "okay";
};

&i2c_smb_0 {
	status = "okay";
	label = "I2C0";
	port_sel = <0>;
	sda-gpios = <&gpio_000_036 3 0>;
	scl-gpios = <&gpio_000_036 4 0>;

	pca9555@22 {
		compatible = "nxp,pca95xx";
		label = "GPIO_P0";

		/* I2C address depends on PCA9555 HW straps.
		 * Address is: 0100<A2><A1><A0>b.
		 */
		reg = <0x22>;

		gpio-controller;
		#gpio-cells = <2>;
	};
};

&espi0 {
	status = "okay";
	io_girq = <19>;
	vw_girqs = <24 25>;
	pc_girq = <15>;
};

&timer3 {
	status = "okay";
};

&ps2_0 {
	status = "okay";
};

&ps2_1 {
	status = "okay";
};

&pwm0 {
	status = "okay";
};

&peci0 {
	status = "okay";
};

&tach0 {
	status = "okay";
};
&wdog {
	status = "okay";
};
